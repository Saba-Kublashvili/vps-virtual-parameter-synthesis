import os, pathlib
base = pathlib.Path("vps")
dirs = [
    "vpscore", "vpscore/verifiers", "vpscore/utils", "vpscore/data",
    "scripts", "configs"
]
for d in dirs:
    (base/d).mkdir(parents=True, exist_ok=True)
print("Created:", [str(base/d) for d in dirs])
